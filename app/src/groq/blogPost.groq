*[slug.current == $slug][0] {
  _id,
	title,
  slug,
  date,
  description,
  body[]{
    ...,
    _type == 'figure' => {
    alt,
      image{
        asset-> {url}
      }
    }
  },
  coverImage->{
  alt,
    image{
      asset->{
       url
      }
    }
  },
  
  "articles": *[_type == "blogpost"  && slug.current != $slug]| order(_createdAt desc)[0..3]{
	title,
	_id,
	slug,
	coverImage->{
   	alt,
		image{
   		asset->{
				url
			}
		}
	},
  }
}